@using EntityLayer
@model Kullanici
@{
    ViewData["Title"] = "guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="p-2">
    <h2>Kullanıcı Güncelle</h2><br />
    @using (Html.BeginForm("Guncelle", "Kullanici", FormMethod.Post, new { @class = "form-group" }))
    {
        @Html.TextBoxFor(kullanici=>kullanici.kullaniciId,new { @class = "form-control",@name="kullaniciId",@value="@Model.kullaniciId",@type="hidden"})
        @Html.Label("Kullanici Adı")
        @Html.TextBoxFor(kullanici=>kullanici.kullaniciAd,new { @class = "form-control",@name="kullaniciAd",@value="@Model.kullaniciAd" })
        @Html.ValidationMessageFor(kullanici=>kullanici.kullaniciAd,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Kullanici Şifre")
        @Html.TextBoxFor(kullanici=>kullanici.kullaniciSifre,new { @class = "form-control",@name="kullaniciSifre",@value="@Model.kullaniciSifre" })
        @Html.ValidationMessageFor(kullanici=>kullanici.kullaniciSifre,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Ad")
        @Html.TextBoxFor(kullanici=>kullanici.ad,new { @class = "form-control",@name="ad",@value="@Model.ad" })
        @Html.ValidationMessageFor(kullanici=>kullanici.ad,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Soyad")
        @Html.TextBoxFor(kullanici=>kullanici.soyad,new { @class = "form-control",@name="soyad",@value="@Model.soyad" } )
        @Html.ValidationMessageFor(kullanici=>kullanici.soyad,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Doğum Tarihi")
        @Html.TextBoxFor(kullanici=>kullanici.dogumTarihi,new { @class = "form-control",@name="dogumTarihi",@value="@Model.dogumTarihi" } )
        @Html.ValidationMessageFor(kullanici=>kullanici.dogumTarihi,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Tc Kimlik No")
        @Html.TextBoxFor(kullanici=>kullanici.tc,new { @class = "form-control",@name="tc",@value="@Model.tc" } )
        @Html.ValidationMessageFor(kullanici=>kullanici.tc,"",new { @class ="text-danger" })
        <br />
        @Html.Label("E-Mail")
        @Html.TextBoxFor(kullanici=>kullanici.mail,new { @class = "form-control",@name="mail",@value="@Model.mail" } )
        @Html.ValidationMessageFor(kullanici=>kullanici.mail,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Cinsiyet")
        <select class="form-control" name="cinsiyet">
            if (Model.cinsiyet)
            {
                <option selected>True</option>
                <option>False</option>
            }
            else
            {
                <option>True</option>
                <option selected>False</option>
            }
        </select>
        <br />
        @Html.Label("Telefon Numarası")
        @Html.TextBoxFor(kullanici=>kullanici.tel,new { @class = "form-control",@name="tel",@value="@Model.tel" })
        @Html.ValidationMessageFor(kullanici=>kullanici.tel,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Durum")
        <select class="form-control" name="silindi">
            if (Model.silindi)
            {
                <option selected>True</option>
                <option>False</option>
            }
            else
            {
                <option>True</option>
                <option selected>False</option>
            }
        </select>
        <br />
        <input class="form-control btn btn-primary" type="submit" value="Kullanıcı Güncelle" />
    }
</div>
