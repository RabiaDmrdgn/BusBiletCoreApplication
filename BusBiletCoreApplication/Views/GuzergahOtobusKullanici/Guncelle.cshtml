        @Html.ValidationMessageFor(GuzergahOtobusKullanici=>GuzergahOtobusKullanici.yolcuAd ,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Yolcu Soyad")
        @Html.TextBoxFor(GuzergahOtobusKullanici=>GuzergahOtobusKullanici.yolcuSoyad ,new { @class = "form-control" })
        @Html.ValidationMessageFor(GuzergahOtobusKullanici=>GuzergahOtobusKullanici.yolcuSoyad ,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Yolcu Tc")
