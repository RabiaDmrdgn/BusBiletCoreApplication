        @Html.TextBoxFor(GuzergahOtobusKullanici=>GuzergahOtobusKullanici.seriNo,new { @class = "form-control" })
        @Html.ValidationMessageFor(GuzergahOtobusKullanici=>GuzergahOtobusKullanici.seriNo,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Ödeme Tipi")
        <select class="form-control" name="odemeTipi">
            <option>False</option>
            <option>True</option>
        </select>
        <br />
        @Html.Label("Koltuk No")
        @Html.TextBoxFor(GuzergahOtobusKullanici=>GuzergahOtobusKullanici.koltukNo ,new { @class = "form-control" })
        @Html.ValidationMessageFor(GuzergahOtobusKullanici=>GuzergahOtobusKullanici.koltukNo ,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Bilet Kesim Tarihi")
        @Html.TextBoxFor(GuzergahOtobusKullanici=>GuzergahOtobusKullanici.biletKesimTarihi ,new { @class = "form-control" })
