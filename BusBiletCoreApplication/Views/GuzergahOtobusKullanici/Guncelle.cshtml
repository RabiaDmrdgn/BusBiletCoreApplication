            <option>False</option>
            <option>True</option>
        </select>
        <br />
        @Html.Label("Sefer Id")
        @Html.TextBoxFor(GuzergahOtobusKullanici=>GuzergahOtobusKullanici.seferId ,new { @class = "form-control" })
        @Html.ValidationMessageFor(GuzergahOtobusKullanici=>GuzergahOtobusKullanici.seferId ,"",new { @class ="text-danger" })
