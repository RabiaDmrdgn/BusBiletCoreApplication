@using EntityLayer;
@model List<GuzergahOtobusKullanici>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>Bilet Id</th>
            <th>Seri No</th>
            <th>Ödeme Tipi</th>
            <th>Koltuk No</th>
            <th>Bilet Kesim Tarihi</th>
            <th>Yolcu Ad</th>
            <th>Yolcu Soyad</th>
            <th>Yolcu Tc</th>
            <th>Yolcu Cinsiyet</th>
            <th>Sefer Id</th>
            <th>Kullanici Id</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.biletId</td>
                <td>@item.seriNo</td>
                <td>@item.odemeTipi</td>
                <td>@item.koltukNo</td>
                <td>@item.biletKesimTarihi</td>
                <td>@item.yolcuAd</td>
                <td>@item.yolcuSoyad</td>
                <td>@item.yolcuTc</td>
                <td>@item.yolcuCinsiyet</td>
                <td>@item.seferId</td>
                <td>@item.kullaniciId</td>
                <td>
                    <button type="button" class="btn btn-danger  text-center" data-bs-whatever="@item.biletId" data-bs-toggle="modal" data-bs-target="#decisionPopup">Sil </button>
                </td>
                <td><a href="/GuzergahOtobusKullanici/guncelle/@item.biletId" type="button" class="btn btn-primary p-2">Güncelle</a></td>
            </tr>
        }

    </tbody>
</table>
<div class="text-center d-flex justify-content-start p-2">
    <a href="/GuzergahOtobusKullanici/ekle" class="btn btn-info">Yeni Bilet Ekle</a>
</div>

